<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="parent" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.iworking.personnel.reserve.controller.ClientListViewController">
    <top>
        <FlowPane alignment="CENTER_LEFT">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#actionCreate" styleClass="grey" text="Добавить">
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#actionUpdate" styleClass="grey" text="Обновить">
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </FlowPane.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin></FlowPane>
    </top>
    <center>
        <StackPane>
            <children>
                <ListView fx:id="companyListView" />
            </children>
        </StackPane>

    </center>
</BorderPane>
