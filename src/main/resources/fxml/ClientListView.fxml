<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<StackPane fx:id="parent" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.iworking.personnel.reserve.controller.CompanyListViewController">
    <children>
        <BorderPane>
            <top>
                <FlowPane alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#actionCreate" text="Добавить">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" />
                            </FlowPane.margin>
                            <styleClass>
                                <String fx:value="grey" />
                                <String fx:value="image-button" />
                                <String fx:value="image-add" />
                            </styleClass>
                        </Button>
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#actionUpdate" text="Обновить">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" />
                            </FlowPane.margin>
                            <styleClass>
                                <String fx:value="grey" />
                                <String fx:value="image-button" />
                                <String fx:value="image-refresh" />
                            </styleClass>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets top="5.0" />
                    </BorderPane.margin></FlowPane>
            </top>
            <center>
                <StackPane>
                    <children>
                        <ListView fx:id="companyListView" styleClass="grey" />
                    </children>
                </StackPane>
            </center>
        </BorderPane>
    </children>
</StackPane>

