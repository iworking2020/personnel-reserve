<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="resumePaneView" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.iworking.personnel.reserve.controller.ResumeViewController">
   <children>
      <GridPane maxHeight="1.7976931348623157E308">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox spacing="5.0" GridPane.columnIndex="1">
               <children>
                  <Label text="Ф.И.О.:" />
                  <Label fx:id="lastNameLabel" text="Фамилия" />
                  <Label fx:id="firstNameLabel" text="Имя" />
                  <Label fx:id="middleNameLabel" text="Отчество" />
                  <Label fx:id="numberPhone" text="Тел.:" />
                  <Label fx:id="email" text="Эл. почта:" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="2">
               <children>
                  <Label fx:id="education" text="Образование:" />
                  <Label fx:id="experience" text="Опыт работы:" />
                  <Label fx:id="address" text="Адрес:" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="3">
               <children>
                  <Label fx:id="profession" text="Профессия:" />
                  <Label fx:id="profField" text="Профобласть:" />
                  <Label fx:id="wage" text="Зарплата:" />
                  <Label fx:id="workType" text="График:" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox alignment="BASELINE_LEFT" GridPane.rowIndex="1">
               <padding>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <children>
                  <Button fx:id="buttonCancel" alignment="CENTER" mnemonicParsing="false" styleClass="grey" text="Назад" />
               </children>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </VBox>
            <VBox alignment="BASELINE_RIGHT" GridPane.columnIndex="3" GridPane.rowIndex="1">
               <children>
                  <Button alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" styleClass="grey" text="Экспорт в PDF" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="photoImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </StackPane>
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</StackPane>
