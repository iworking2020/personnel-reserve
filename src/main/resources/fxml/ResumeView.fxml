<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="resumePaneView" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.iworking.personnel.reserve.controller.ResumeViewController">
   <children>
      <GridPane maxHeight="1.7976931348623157E308">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox spacing="5.0" GridPane.columnIndex="1">
               <children>
                  <Label text="Ф.И.О.:">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
                  <Label fx:id="lastNameLabel" text="Фамилия" />
                  <Label fx:id="firstNameLabel" text="Имя" />
                  <Label fx:id="middleNameLabel" text="Отчество" />
                  <VBox>
                     <children>
                        <Label text="Тел.:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="numberPhoneLabel" text="+7 999 999 99 99" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Эл. почта:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="emailLabel" text="test@mail.ru" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="2">
               <children>
                  <VBox>
                     <children>
                        <Label text="Образование:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="educationLabel" text="Среднее" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Опыт работы:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="experienceLabel" text="От 1 года" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Адрес:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <Label fx:id="addressLabel" text="Россия ....." />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="3">
               <children>
                  <VBox>
                     <children>
                        <Label text="Профессия:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="professionLabel" text="Профессия" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Профобласть:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="profFieldLabel" text="Профобласть" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Зарплата:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="wageLabel" text="99 999" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="График:">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Label fx:id="workTypeLabel" text="Полный день" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox alignment="BASELINE_LEFT" GridPane.rowIndex="1">
               <padding>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <children>
                  <Button fx:id="buttonCancel" alignment="CENTER" mnemonicParsing="false" styleClass="grey" text="Назад" />
               </children>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </VBox>
            <VBox alignment="BASELINE_RIGHT" GridPane.columnIndex="3" GridPane.rowIndex="1">
               <children>
                  <Button alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" styleClass="grey" text="Экспорт в PDF" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="photoImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </StackPane>
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</StackPane>
