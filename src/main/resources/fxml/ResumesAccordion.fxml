<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="parent" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.iworking.personnel.reserve.controller.ResumesAccordionController">
    <top>
        <FlowPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button mnemonicParsing="false" styleClass="grey" text="Добавить">
                    <FlowPane.margin>
                        <Insets bottom="5.0" right="5.0" />
                    </FlowPane.margin>
                </Button>
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#actionUpdate" styleClass="grey" text="Обновить">
                    <FlowPane.margin>
                        <Insets bottom="5.0" right="5.0" />
                    </FlowPane.margin>
                </Button>
            </children>
            <padding>
                <Insets left="5.0" right="5.0" top="5.0" />
            </padding>
        </FlowPane>
    </top>
    <center>
        <Accordion fx:id="resumesAccordion" styleClass="grey" />
    </center>
</BorderPane>
