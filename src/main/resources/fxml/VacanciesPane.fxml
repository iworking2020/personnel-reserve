<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.iworking.personnel.reserve.controller.VacanciesPaneFxmlController">
    <children>
        <VBox>
            <children>
                <FlowPane>
                    <children>
                        <Button mnemonicParsing="false" onAction="#actionButtonCreateCompany" styleClass="grey" text="Добавить">
                            <FlowPane.margin>
                                <Insets bottom="5.0" right="5.0" />
                            </FlowPane.margin></Button>
                  <Button fx:id="updateCompaniesTableButton" mnemonicParsing="false" onAction="#actionButtonUpdateCompaniesTable" styleClass="grey" text="Обновить">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <FlowPane.margin>
                        <Insets bottom="5.0" right="5.0" />
                     </FlowPane.margin>
                  </Button>
                        <Button fx:id="editCompanyButton" disable="true" mnemonicParsing="false" onAction="#actionButtonEditCompany" styleClass="grey" text="Редактировать">
                            <FlowPane.margin>
                                <Insets bottom="5.0" right="5.0" />
                            </FlowPane.margin></Button>
                        <Button fx:id="deleteCompanyButton" disable="true" mnemonicParsing="false" onAction="#actionButtonDeleteCompany" styleClass="grey" text="Удалить">
                     <FlowPane.margin>
                        <Insets bottom="5.0" />
                     </FlowPane.margin></Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </FlowPane>
            <StackPane fx:id="wrapperCompaniesTable">
               <children>
                      <TableView fx:id="tableCompanies" prefHeight="200.0">
                          <columns>
                              <TableColumn fx:id="companyTypeColumn" prefWidth="92.0" text="Тип" />
                              <TableColumn fx:id="companyNameColumn" prefWidth="153.0" text="Наименование" />
                          </columns>
                      </TableView>
               </children>
            </StackPane>
            <FlowPane>
               <children>
                  <Button fx:id="addVacancyButton" disable="true" mnemonicParsing="false" onAction="#actionButtonCreateVacancy" styleClass="grey" text="Добавить">
                     <FlowPane.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="updateVacanciesButton" disable="true" mnemonicParsing="false" styleClass="grey" text="Обновить">
                     <FlowPane.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="editVacancyButton" disable="true" mnemonicParsing="false" styleClass="grey" text="Редактировать">
                     <FlowPane.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="deleteVacancyButton" disable="true" mnemonicParsing="false" styleClass="grey" text="Удалить">
                     <FlowPane.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </FlowPane>
            <StackPane fx:id="wrapperVacanciesTable">
               <children>
                  <TableView fx:id="tableVacancies" prefHeight="200.0">
                    <columns>
                      <TableColumn fx:id="professionCol" prefWidth="150.0" text="Профессия" />
                      <TableColumn fx:id="profFieldCol" prefWidth="150.0" text="Проф. область" />
                        <TableColumn fx:id="workTypeCol" prefWidth="150.0" text="График работы" />
                        <TableColumn fx:id="educationCol" prefWidth="150.0" text="Образование" />
                        <TableColumn fx:id="wageCol" prefWidth="150.0" text="Зарплата" />
                        <TableColumn fx:id="currencyCol" prefWidth="150.0" text="Валюта" />
                    </columns>
                  </TableView>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </StackPane>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="20.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                  <StackPane GridPane.columnIndex="2">
                     <children>
                              <VBox fx:id="vacancyEditBlock" spacing="5.0" visible="false">
                                  <children>
                                      <TextField promptText="Профессия" />
                                      <ComboBox maxWidth="1.7976931348623157E308" promptText="Проф. область" />
                                      <ComboBox maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="График работы" />
                                      <ComboBox maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Образование" />
                                      <TextField promptText="Зарплата" />
                                      <ComboBox maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Валюта" />
                                      <DatePicker maxWidth="1.7976931348623157E308" promptText="начало опыта раб." />
                                      <DatePicker maxWidth="1.7976931348623157E308" promptText="конец опыта раб." />
                                      <TextArea maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" promptText="Адрес" />
                                  </children>
                              </VBox>
                     </children>
                  </StackPane>
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <VBox fx:id="companyViewBlock" spacing="8.0" visible="false">
                           <children>
                              <Label fx:id="companyTypeLabel" text="Тип компании" />
                              <Label fx:id="companyNameLabel" text="Наименование" />
                              <Label fx:id="companyNumberPhoneLabel" text="Номер тел." />
                              <Label fx:id="companyEmailLabel" text="Эл. почта" />
                              <Label fx:id="companyWebPageLabel" text="Сайт" />
                              <Label fx:id="companyAddressLabel" text="Адрес" />
                           </children>
                        </VBox>
                              <VBox fx:id="companyEditBlock" spacing="5.0" visible="false">
                                  <children>
                                      <ComboBox fx:id="companyTypeComboBox" maxWidth="1.7976931348623157E308" promptText="Тип компании" />
                                      <TextField fx:id="nameCompanyTextField" promptText="Наименование" />
                                      <TextField fx:id="numberPhoneTextField" promptText="Номер тел." />
                                      <TextField fx:id="emailTextField" promptText="Эл. почта" />
                                      <TextField fx:id="webPageTextField" promptText="Сайт" />
                                      <TextArea fx:id="addressTextArea" prefWidth="200.0" promptText="Адрес" />
                              <AnchorPane>
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#actionButtonCancelCreateCompany" styleClass="grey" text="Отмена" AnchorPane.leftAnchor="0.0">
                                       <opaqueInsets>
                                          <Insets />
                                       </opaqueInsets>
                                    </Button>
                                    <Button fx:id="saveCompanyButton" mnemonicParsing="false" onAction="#actionButtonSaveCompany" styleClass="grey" text="Сохранить" visible="false" AnchorPane.rightAnchor="0.0">
                                       <opaqueInsets>
                                          <Insets />
                                       </opaqueInsets>
                                    </Button>
                                    <Button fx:id="updateCompanyButton" mnemonicParsing="false" onAction="#actionButtonUpdateCompany" styleClass="grey" text="Обновить" visible="false" AnchorPane.rightAnchor="0.0" />
                                 </children>
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </AnchorPane>
                                  </children>
                              </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </StackPane>
                    </children>
                </GridPane>
            </children>
            <StackPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>
