<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.*?>
<StackPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.iworking.personnel.reserve.controller.VacanciesPaneController">
    <children>
      <BorderPane>
         <right>
             <StackPane style="-fx-border-width: 0 0 0 1px; -fx-border-color: rgba(0, 0, 0, 0.20);" />
         </right>
         <bottom>
             <StackPane fx:id="bottomPane" alignment="BOTTOM_CENTER" minHeight="200.0" style="-fx-border-width: 1px 0 0 0; -fx-border-color: rgba(0, 0, 0, 0.20);">
                 <children>
                     <StackPane fx:id="wrapperResume">
                         <children>
                             <fx:include fx:id="resumeView" source="ResumeView.fxml" />
                             <fx:include fx:id="resumeEdit" source="ResumeEdit.fxml" />
                         </children>
                     </StackPane>
                     <GridPane fx:id="wrapperClient" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
                         <columnConstraints>
                             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                             <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="20.0" />
                             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                         </columnConstraints>
                         <rowConstraints>
                             <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                         </rowConstraints>
                         <children>
                             <StackPane>
                                 <children>
                                     <fx:include fx:id="companyView" source="CompanyView.fxml" />
                                     <fx:include fx:id="companyEdit" source="CompanyEdit.fxml" />
                                 </children>
                                 <padding>
                                     <Insets bottom="10.0" left="10.0" top="10.0" />
                                 </padding>
                             </StackPane>
                             <StackPane GridPane.columnIndex="2">
                                 <children>
                                     <fx:include fx:id="vacancyView" source="VacancyView.fxml" />
                                     <fx:include fx:id="vacancyEdit" source="VacancyEdit.fxml" />
                                 </children>
                                 <padding>
                                     <Insets bottom="10.0" right="10.0" top="10.0" />
                                 </padding>
                             </StackPane>
                         </children>
                     </GridPane>
                 </children>
             </StackPane>
         </bottom>
         <center>
            <SplitPane dividerPositions="0.3, 0.7" styleClass="grey" BorderPane.alignment="CENTER">
               <items>
                    <ListView fx:id="companyListView" maxWidth="250" style="-fx-border-width: 0 1px 0 0; -fx-border-color: rgba(0, 0, 0, 0.20);" />
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                        <content>
                            <VBox>
                                <children>
                                    <fx:include fx:id="companiesTable" source="CompaniesTable.fxml" />
                                    <fx:include fx:id="vacanciesTable" source="VacamciesTable.fxml" />
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </VBox>
                        </content>
                    </ScrollPane>
                   <ScrollPane fx:id="resumesAccordionWrapper" fitToHeight="true" fitToWidth="true" maxWidth="300" minWidth="0.0" style="-fx-border-width: 0 0 0 1px; -fx-border-color: rgba(0, 0, 0, 0.20);">
                       <content>
                           <fx:include fx:id="resumesAccordion" source="ResumesAccordion.fxml" />
                       </content>
                   </ScrollPane>
               </items>
            </SplitPane>
         </center>
      </BorderPane>
    </children>
</StackPane>
