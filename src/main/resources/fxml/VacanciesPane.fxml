<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           style="-fx-background-color: white;">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <FlowPane prefWidth="200.0">
                    <children>
                        <Button mnemonicParsing="false" styleClass="grey" text="Добавить">
                            <FlowPane.margin>
                                <Insets right="5.0" />
                            </FlowPane.margin></Button>
                        <Button mnemonicParsing="false" styleClass="grey" text="Редактировать">
                            <FlowPane.margin>
                                <Insets right="5.0" />
                            </FlowPane.margin></Button>
                        <Button mnemonicParsing="false" styleClass="grey" text="Удалить" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </FlowPane>
                <TableView fx:id="tableCompanies" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="companyTypeColumn" prefWidth="92.0" text="Тип" />
                        <TableColumn fx:id="companyNameColumn" prefWidth="153.0" text="Наименование" />
                    </columns>
                </TableView>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="20.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <VBox spacing="5.0" GridPane.columnIndex="2">
                            <children>
                                <TextField promptText="Профессия" />
                                <ComboBox maxWidth="1.7976931348623157E308" promptText="Проф. область" />
                                <ComboBox maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="График работы" />
                                <ComboBox maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Образование" />
                                <TextField promptText="Зарплата" />
                                <ComboBox maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Валюта" />
                                <DatePicker maxWidth="1.7976931348623157E308" promptText="начало опыта раб." />
                                <DatePicker maxWidth="1.7976931348623157E308" promptText="конец опыта раб." />
                                <TextArea maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" promptText="Адрес" />
                            </children>
                            <GridPane.margin>
                                <Insets bottom="10.0" top="10.0" />
                            </GridPane.margin>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <ComboBox maxWidth="1.7976931348623157E308" promptText="Тип компании" />
                                <TextField promptText="Наименование" />
                                <TextField promptText="Номер тел." />
                                <TextField promptText="Эл. почта" />
                                <TextField promptText="Сайт" />
                                <TextArea prefWidth="200.0" promptText="Адрес" />
                            </children>
                            <GridPane.margin>
                                <Insets bottom="10.0" top="10.0" />
                            </GridPane.margin>
                        </VBox>
                    </children>
                </GridPane>
            </children>
            <StackPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>
